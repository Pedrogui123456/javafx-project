<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
fx:controller="com.example.javafxproject.CadastroFuncionarioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Bem-vindo(a) a plataforma de gerenciamento comercial do IFSP" styleClass=".formTitle"  />
        <Label text="Para o seu novo acesso, precisaremos de algumas informações suas" styleClass="SubTitulolbl" />
    </VBox>


    <Label text="Email:" styleClass="labelField" />
    <TextField fx:id="txfEmail" />

    <Label text="Nome:" styleClass="labelField" />
    <TextField fx:id="txfNome" />

    <Label text="Senha:" styleClass="labelField" />
    <TextField fx:id="txfSenha" />


    <VBox alignment="CENTER_RIGHT" spacing="20.0">
        <Button text="Cadastrar" onAction="#onActionCadastrar" />
    </VBox>

</VBox>
